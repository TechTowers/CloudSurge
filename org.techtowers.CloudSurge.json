{
  "id": "org.techtowers.CloudSurge",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "cloudsurge",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=session-bus",
    "--device=dri",
    "--socket=wayland"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    "python3-requirements.json",
    {
      "name": "blueprint-compiler",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
          "tag": "v0.14.0"
        }
      ]
    },
    {
      "name": "cloudsurge",
      "builddir": true,
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "branch": "main",
          "url": "https://github.com/TechTowers/CloudSurge"
        }
      ]
    }
  ]
}
