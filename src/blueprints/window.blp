              subtitle: "10.0.0.3";
            }
            Adw.ActionRow {
              title: "DigitalOcean1";
              subtitle: "10.0.0.3";
            }
          };
        }

        ScrolledWindow machines_window {
          visible: false;
          propagate-natural-height: true;
          child: ListBox machines_list {
            //orientation: vertical;
            //spacing: 12;


            selection-mode: none;
            css-classes: ["boxed-list"];

            Adw.ActionRow vm1 {
              title: "VM1";
              subtitle: "10.0.0.1";

              Button vm_settings_button {
                valign: center;

                child: Box {
                  spacing: 6;
                  Image {
                    icon-name: "applications-system-symbolic";
                  }
                };
              }
            }
            Adw.ActionRow vm2 {
              title: "VM2";
              subtitle: "10.0.0.2";
            }
            Adw.ActionRow vm3 {
